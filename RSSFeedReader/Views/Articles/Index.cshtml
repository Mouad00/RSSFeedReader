@model IEnumerable<Article>
@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <h1>All Articles</h1>
    <div class="mb-2">
        <form method="post">
            <div class="mb-2 d-flex align-items-center" inline="true">
                <label class="mx-2">From</label>
                <input class="mx-2" placeholder="Select date" type="datetime" name="from">
                <label class="mx-2">To</label>
                <input class="mx-2" placeholder="Select date" type="datetime" name="to">
                <input class="btn btn-success mx-2" type="submit" value="Search" />
            </div>
            
        </form>
    </div>
    <a asp-controller="Articles" asp-action="Index" class="btn btn-secondary">Back to list</a>

    <hr />
    <div class="d-flex flex-lg-wrap">
        @if (Model != null)
        {
            @foreach (var article in Model)
            {
                <div class="col-md-3 mb-2">
                    <div class="card mx-1">
                        <img src="@article.Image" class="card-img-top" alt="@article.Title">
                        <div class="card-body">
                            <b>@article.PublishDate</b>
                            <h5 class="card-title">@article.Title</h5>
                            <p class="card-text">@article.Description</p>
                            <a href="@article.Link" class="btn btn-primary">Article Details</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
