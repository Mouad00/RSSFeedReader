@model IEnumerable<Feed>
@{
    ViewData["Title"] = "Index";
}

@*<partial name="_Notification" />*@

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
               <h2 class="text-primary">Feed List</h2>
        </div>
        <div class="col-6 text-end">
           <a asp-controller="Feeds" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-bookmark-plus"></i> &nbsp; Create new Feed
            </a>
        </div>
    </div>
    <br /><br/>

<form method="post" asp-action="DeleteSelected">
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                    <th><input type="checkbox" name="allChecked" id="select-all" onchange="selectAllChanged()"/>&nbsp;Select All</th>
                <th>Feed Name</th>
                <th>Feed Url</th>
                <th></th>
                    <th></th>
                    <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var feed in Model)
            {
                <tr>
                    <td><input type="checkbox" name="selectedItems" value="@feed.Id" class="item-checkbox" /></td>
                    <td width="10%">@feed.Name</td>
                    <td width="30%">@feed.Url</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                                <a asp-controller="Feeds" asp-action="Edit" asp-route-id="@feed.Id" class="btn btn-primary mx-3"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                                <a asp-controller="Feeds" asp-action="Delete" asp-route-id="@feed.Id" class="btn btn-danger mx-3"><i class="bi bi-trash3"></i> &nbsp; Delete</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                                <a asp-controller="Feeds" asp-action="Details" asp-route-id="@feed.Id" class="btn btn-success mx-3"><i class="bi bi-three-dots"></i> &nbsp; Details</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
        <input type="submit" value="Delete Selected Items" class="btn btn-danger mb-2"/>
</form>
</div>

@section scripts{
    <script>
        function selectAllChanged() {
            var selectAllCheckbox = document.getElementById("select-all");
            var itemCheckboxes = document.getElementsByClassName("item-checkbox");

            for (var i = 0; i < itemCheckboxes.length; i++) {
                itemCheckboxes[i].checked = selectAllCheckbox.checked;
            }
        }
    </script>
}

